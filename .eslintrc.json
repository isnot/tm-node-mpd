{
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "env": {
    "es2020": true,
    "node": true,
    "commonjs": true,
    "jest/globals": true,
    "mocha": true
  },
  "plugins": [
    "prettier",
    "node",
    "security",
    "security-node",
    "jest"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:node/recommended",
    "plugin:security/recommended",
    "plugin:security-node/recommended",
    "plugin:prettier/recommended"
  ],
  "rules": {
    "prettier/prettier": "error",
    "node/exports-style": ["error", "module.exports"],
    "node/no-deprecated-api": ["error", { "version": ">=10.13.0" }],
    "security-node/detect-crlf": [0],
    "indent": ["error", 2, { "SwitchCase": 1 }],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "semi": [
      "error",
      "always"
    ],
    "semi-spacing": [
      "error",
      {
        "after": true,
        "before": false
      }
    ],
    "semi-style": [
      "error",
      "last"
    ],
    "no-extra-semi": "error",
    "no-unexpected-multiline": "error",
    "no-unreachable": "error",
    "no-useless-escape": [0],
    "quotes": [
      "error",
      "single"
    ]
  }
}
